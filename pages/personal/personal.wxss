/* pages/personal/personal.wxss */
page{
 background-color: rgb(245, 245, 245);
 height: 100%;
 overflow: hidden; 
}
/* 顶部背景 */
.my_top{
  overflow: hidden;
  width: 100%;
  height: 200rpx;
}
.my_top image{
  width:100%;  
  height:100%;    
}
/* 我的订单OC */
.my_OC{
  padding-bottom: 24rpx;
  padding:24rpx 50rpx 10rpx 33rpx; 
  margin-bottom: 2rpx;
  font-family: PingFang-SC-Medium;
  font-size: 38rpx;
  color: rgb(51, 51, 51);
  line-height: 1;
  width: 720rpx;
  height: 50rpx;
  background-color: #fff;
}

.my_OCLine1{
  float: right;
  padding-top: 1rpx;
  width: 720rpx; 
  background-color: rgb(245, 245, 245);
}
.my_OC image{
  float: right;
  margin-right: 10rpx;
  width: 38rpx;
  height: 38rpx;
}
/* 订单OC 四个图标，文字 */
.my_OClist{
  padding: 22rpx 40rpx 22rpx 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
  flood-color: rgb(153, 153, 153); 
  background-color: #fff;
}
.my_OClist view{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.my_OClist  image{
  width: 48rpx;
  height: 48rpx;
}

/* 优惠卷等其它列 my_Otherlist */
.my_Otherlist{
  margin-top: 16rpx;
}
.my_otherlist {
  padding: 23rpx 0rpx 23rpx 24rpx;
  align-items: center;
  background-color: #fff;
  margin-bottom: 2rpx;
}
.my_otherlist .img1{
  width: 38rpx;
  height: 38rpx;
  float: left;
  margin-left: 24rpx; 
  padding-top: 8rpx;
}
.my_otherlist text{
margin-left: 36rpx;
padding-bottom: 8rpx;
}
.my_otherlist .img2{
  width: 38rpx;
  height: 38rpx;
  float: right;
  margin-right: 25rpx;
  padding-top: 8rpx;
}
.my_OCLine3{
  padding-top: 2rpx;
  background-color: rgb(245, 245, 245);
}